@model IEnumerable<string>
@{ Layout = null; }

@*@Html.ActionLink("Home", "List", "Product")*@

<nav>
    <a href="#" id="toggle-menu" class="mobile"><span>Menu</span></a>
    <ul id="main-menu" class="accordion">
        @foreach (var link in Model)
        {
            <li>
                @Html.RouteLink(link,
new { controller = "Product", action = "List", category = link, page = 1 },
new { @class = link == ViewBag.SelectedCategory ? "selected" : null })
        </li>
        }
    </ul>
    <div id="social">
        <a href="http://www.facebook.com/shopify" target="_blank" class="facebook "></a>
        <a href="http://www.twitter.com/shopify" target="_blank" class="twitter "></a>
        <a href="http://www.instagram.com/shopify" target="_blank" class="instagram "></a>
        <a href="http://www.pinterest.com/shopify" target="_blank" class="pinterest "></a>
        <a href="/blogs/news.atom" target="_blank" class="rss "></a>
    </div>
</nav>


